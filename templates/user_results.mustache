{{^results_not_empty}}
  <h2><strong>NO RESULTS FOUND FOR THAT USER!</strong></h2>
{{/results_not_empty}}

{{#results_not_empty}}
      <table class="table table-sm table-hover">
        <caption>All scores of the user <span style="color: red">{{ username }}</span></caption>
        <thead>
          <tr>
            <th scope="col">Game</th>
            <th scope="col">Score</th>
            <th scope="col">Grade</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#results}}
          <tr>
            <td>{{ name }}</td>
            <td>{{ score }}</td>
            <td>{{ grade }}</td>
            <td>
                <form action="{{ formaction }}" method='POST'>
                    <input type="hidden" name="resultid" value="{{ id }}">
                    <input type="hidden" name="userSearch" value="{{ username }}">
                    <button class="btn btn-danger">DELETE</button>
                </form>
            </td>
          </tr>
          {{/results}}
        </tbody>
      </table>
{{/results_not_empty}}